{
    "default_branch": "master",

    "default_remote": "origin",

    "github_token": "",

    "github_user": "",

    "hooks": {
        "issue": {
            "close": {
                "before": [],
                "after": []
            },
            "new": {
                "before": [],
                "after": [
                    "gh is --browser --user {{options.user}} --repo {{options.repo}} --number {{options.number}}"
                ]
            },
            "open": {
                "before": [],
                "after": []
            }
        },
        "pull-request": {
            "close": {
                "before": [],
                "after": []
            },
            "fetch": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Just started reviewing :)'"
                ]
            },
            "fwd": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Pull request forwarded to {{forwardedLink}}. [See changes here.]({{compareLink}})'",
                    "gh pr {{options.number}} --close"
                ]
            },
            "merge": {
                "before": [],
                "after": [
                    "gh pr {{options.number}} --comment 'Thank you, pull request merged! [See changes here.]({{compareLink}})'"
                ]
            },
            "open": {
                "before": [],
                "after": []
            },
            "submit": {
                "before": [],
                "after": [
                    "{{#if options.number}} gh pr {{options.number}} --comment 'Pull request submitted to {{submittedLink}}. [See changes here.]({{compareLink}})' {{/if}}",
                    "gh pr --browser --user {{options.submit}} --repo {{options.repo}} --number {{options.submittedPull}}",
                    "{{#if options.number}} gh pr {{options.number}} --close {{/if}}"
                ]
            }
        },
        "repo": {
            "delete": {
                "before": [],
                "after": []
            },
            "fork": {
                "before": [],
                "after": []
            },
            "new": {
                "before": [],
                "after": [
                    "gh re --browser --user {{options.loggedUser}} --repo {{options.new}}"
                ]
            }
        },
        "gists": {
            "delete": {
                "before": [],
                "after": []
            },
            "fork": {
                "before": [],
                "after": [
                    "gh gi --browser --id {{options.id}}"
                ]
            },
            "new": {
                "before": [],
                "after": [
                    "gh gi --browser --id {{options.id}}"
                ]
            }
        }
    },

    "pull_branch_name_prefix": "pr-",

    "replace": {},

    "signature": " <br><br>:octocat: *Sent from [GH](http://nodegh.io).*"
}