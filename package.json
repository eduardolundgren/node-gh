{
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "release": {
        "branch": "master",
        "debug": true,
        "prepare": [
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "publish": [
            "@semantic-release/npm",
            {
                "path": "@semantic-release/github",
                "assets": [
                    "lib/**/*.js",
                    "bin/gh.js"
                ]
            }
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@oclif/tslint": "^3.1.1",
        "@semantic-release/git": "7.0.7",
        "@semantic-release/github": "5.2.8",
        "@semantic-release/npm": "5.1.3",
        "@types/node": "^10.14.7",
        "@types/jest": "23.3.11",
        "commitizen": "3.0.7",
        "cross-env": "5.2.0",
        "cz-conventional-changelog": "2.1.0",
        "husky": "1.3.1",
        "jest": "24.7.1",
        "lerna": "^3.14.1",
        "prettier": "1.18.2",
        "pretty-quick": "1.8.0",
        "semantic-release": "15.13.2",
        "strip-ansi": "5.0.0",
        "ts-jest": "24.0.2",
        "tslint": "5.12.0",
        "tslint-config-airbnb": "5.11.1",
        "tslint-config-prettier": "1.17.0",
        "tslint-plugin-prettier": "2.0.1",
        "typescript": "3.2.2"
    },
    "engines": {
        "node": ">=6"
    },
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "dev": "lerna run dev",
        "commit": "git-cz",
        "env:test": "cross-env NODE_ENV=testing GH_USER=protoEvangelion GH_TOKEN=0001",
        "test": "npm run env:test -- jest",
        "test:watch": "npm run env:test -- jest --watch",
        "test:ci": "npm run env:test -- jest",
        "test:coverage": "npm run env:test -- jest --coverage",
        "test:program": "npm run env:test -- gh "
    }
}
