    "version": "0.2.0",
    "configurations": [
        {
            "name": "Normal Mode",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/debug.ts", "is"],
            "console": "integratedTerminal"
        },
        {
            "name": "Testing Mode",
            "type": "node",
            "request": "launch",
            "env": { "NODE_ENV": "testing", "GH_USER": "protoEvangelion", "GH_TOKEN": "0001" },
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": [
                "${workspaceFolder}/src/debug.ts",
                "pr",
                "-s",
                "protoEvangelion",
                "-b",
                "master",
                "-t",
                "pr title",
                "-D",
                "pr description"
            ],
            "console": "integratedTerminal"
        }
    ]
}
