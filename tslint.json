{
    "rulesDirectory": ["tslint-plugin-prettier"],
    "extends": ["tslint-config-airbnb", "tslint-config-prettier", "@oclif/tslint"],
    "rules": {
        "function-name": false,
        "import-name": false,
        "no-increment-decrement": false,
        "no-parameter-reassignment": false,
        "no-this-assignment": false,
        "no-var-keyword": false,
        "object-curly-spacing": true,
        "prefer-const": false,
        "ordered-imports": false,
        "ter-indent": false,
        "prettier": [
            true,
            {
                "arrowParens": "avoid",
                "bracketSpacing": true,
                "printWidth": 100,
                "semi": false,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5",
                "useTabs": false
            }
        ],
        "variable-name": false
    }
}
