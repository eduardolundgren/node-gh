{
    "engines": {
        "node": ">=6"
    },
    "private": true,
    "name": "gh",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,json,md}": [
            "prettier --write",
            "npm run test:related --",
            "git add"
        ]
    },
    "scripts": {
        "build": "lerna run build",
        "dev": "lerna run dev",
        "commit": "git-cz",
        "env:test": "cross-env NODE_ENV=testing GH_USER=protoEvangelion GH_TOKEN=0001",
        "test": "npm run env:test -- jest --silent",
        "test:related": "npm run env:test -- jest --silent --findRelatedTests",
        "test:watch": "npm run env:test -- jest --watch",
        "test:ci": "npm run env:test -- jest",
        "test:coverage": "npm run env:test -- jest --coverage",
        "test:program": "npm run env:test -- gh "
    },
    "release": {
        "branch": "master",
        "debug": true,
        "prepare": [
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "publish": [
            "@semantic-release/npm",
            {
                "path": "@semantic-release/github",
                "assets": [
                    "lib/**/*.js",
                    "bin/gh.js"
                ]
            }
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@oclif/tslint": "^3.1.1",
        "@semantic-release/git": "7.0.7",
        "@semantic-release/github": "5.2.8",
        "@semantic-release/npm": "5.1.3",
        "@types/jest": "23.3.11",
        "@types/node": "^10.14.7",
        "commitizen": "3.0.7",
        "cross-env": "^5.2.0",
        "cz-conventional-changelog": "2.1.0",
        "husky": "^2.5.0",
        "is-ci-cli": "^1.1.1",
        "jest": "24.7.1",
        "jest-watch-typeahead": "^0.3.1",
        "lerna": "^3.14.1",
        "lint-staged": "^8.2.1",
        "mocha": "^6.1.4",
        "prettier": "1.18.2",
        "semantic-release": "15.13.2",
        "strip-ansi": "5.0.0",
        "ts-jest": "24.0.2",
        "tslint": "5.12.0",
        "tslint-config-airbnb": "5.11.1",
        "tslint-config-prettier": "1.17.0",
        "tslint-plugin-prettier": "2.0.1",
        "typescript": "3.2.2"
    }
}
